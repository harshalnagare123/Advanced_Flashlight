<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">


    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="User Name"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- User Email with an icon -->
    <LinearLayout
        android:id="@+id/user_email_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textColor="#777777"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prime_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Prime check icon, initially invisible -->
        <ImageView
            android:id="@+id/prime_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Prime Status Icon"
            android:src="@drawable/check"
            android:visibility="gone" />  <!-- Start as invisible -->

        <!-- Prime status text -->
        <TextView
            android:id="@+id/prime_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prime Status"
            android:textColor="#4CAF50"
            android:textSize="16sp" />
    </LinearLayout>


    <!-- Logout Button with rounded corners -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/black"
        android:layout_marginTop="24dp"
        android:drawablePadding="16dp"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</LinearLayout>
